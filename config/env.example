# API Risk Visualizer Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/security_scans.db
# For PostgreSQL:
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/api_risk_visualizer

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI/ML Configuration
# LLM Provider Configuration (gemini or groq)
LLM_PROVIDER=gemini

# Gemini API Key for AI-powered features
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest  # Specify the exact model to use

# Groq API Key for AI-powered features (alternative to Gemini)
GROQ_API_KEY=your_groq_api_key_here

# Legacy OpenAI API Key (optional)
OPENAI_API_KEY=your-openai-api-key-here

HUGGINGFACE_API_KEY=your-huggingface-api-key-here
TENSORFLOW_MODEL_PATH=./models/
AI_CONFIDENCE_THRESHOLD=0.7

# External APIs
VULNERABILITY_DB_API_KEY=your-vuln-db-api-key
THREAT_INTELLIGENCE_API_KEY=your-threat-intel-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
DEFAULT_SCAN_TIMEOUT=1800000
MAX_ENDPOINTS_PER_SCAN=1000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Report Generation
REPORTS_STORAGE_PATH=./reports/
REPORT_RETENTION_DAYS=30

# Security Headers
CORS_ORIGIN=http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1 